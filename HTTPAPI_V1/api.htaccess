<FilesMatch "^.+$">
  Order Allow,Deny
  Allow from All
</FilesMatch>

RewriteEngine On


RewriteRule ^(?:v1/)?([a-z]+)/?$ apiv1.php?resource=$1 [PT,L,QSA]
RewriteRule ^(?:v1/)?([a-z]+)/([a-zA-Z0-9_]+)(\.[a-z]+)?/?$ apiv1.php?resource=$1&id=$2&ext=$3 [PT,L,QSA]
RewriteRule ^(?:v1/)?(families)/([a-z]+)/([a-zA-Z0-9_]+)(\.[a-z]+)?$ apiv1.php?resource=$1&subresource=$2&id=$3&ext=$4 [PT,L,QSA]